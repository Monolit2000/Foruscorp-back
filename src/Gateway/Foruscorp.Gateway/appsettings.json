{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information",
      "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleware": "Information"
    }
  },
  "AllowedHosts": "*",

  "Jwt": {
    "Secret": "a-valid-string-secret-that-is-at-least-512-bits-long-which-is-very-long",
    "Issuer": "MyAwesomeApp",
    "Audience": "MyAwesomeAudience",
    "ExpirationInMinutes": "43200"
  },

  "ReverseProxy": {
    "Routes": {
      "truckstracking": {
        "ClusterId": "truckstracking-cluster",
        "Match": {
          "Path": "/truckstracking-api/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/truckstracking-api" }
        ]
      },
      "fuelstations": {
        "ClusterId": "fuelstations-cluster",
        "Match": {
          "Path": "/fuelstations-api/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/fuelstations-api" }
        ]
      },
      "truckss": {
        "ClusterId": "trucks-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/trucks-api/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/trucks-api" }
        ]
      },
      "fuelroutes": {
        "ClusterId": "fuelroutes-cluster",
        "Match": {
          "Path": "/fuelroutes-api/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/fuelroutes-api" }
        ]
      },
      "auth": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/auth-api/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/auth-api" }
        ]
      },
      "push": {
        "ClusterId": "push-cluster",
        "Match": { "Path": "/push-api/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/push-api" }
        ]
      }
    },
    "Clusters": {
      "truckstracking-cluster": {
        "Destinations": {
          "truckstracking-api": {
            "Address": "http://truckstracking-api:5001/"
          }
        }
      },
      "fuelstations-cluster": {
        "Destinations": {
          "fuelstations-api": {
            "Address": "http://fuelstations-api:5002/"
          }
        }
      },
      "trucks-cluster": {
        "Destinations": {
          "trucks-api": {
            "Address": "http://trucks-api:5003/"
          }
        }
      },
      "fuelroutes-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          },
          "Passive": {
            "Enabled": true,
            "Policy": "TransportFailureRate",
            "ReactivationPeriod": "00:01:00"
          }
        },
        "Destinations": {
          "fuelroutes-api-1": {
            "Address": "http://fuelroutes-api-1:5004/"
          },
          "fuelroutes-api-2": {
            "Address": "http://fuelroutes-api-2:5005/"
          }
        }
      },
      "auth-cluster": {
        "Destinations": {
          "auth-api": {
            "Address": "http://foruscorp.auth:5007/"
          }
        }
      },
      "push-cluster": {
        "Destinations": {
          "push-api": {
            "Address": "http://foruscorp.push:5008/"
          }
        }
      }
    }
  },
  "Telemetry": {
    "Tracing": {
      "Enabled": true,
      "Propagate": true
    }
  }
}
